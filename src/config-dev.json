{
  "$schema": "./schema/config.schema.json",
  "logLevel": 10,
  "osc": {
    "tcp": {
      "port": 8000
    },
    "udp": {
      "port": 8000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": ["^.*$"],
          "properties": ["address"]
        },
        "actions": [
          {
            "type": "osc-output",
            "params": {
              "_address": "${msg.address}/${Math.floor(( msg.args[0] - 0 ) * ( 100 - 0 ) / ( 10 - 0 ) + 0)}",
              "_args": ["${msg.args[0]}"],
              "host": "localhost",
              "port": 8008,
              "protocol": "udp"
            },
            "enabled": true
          },
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "midi": {
    "triggers": []
  }
}
