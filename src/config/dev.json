{
  "$schema": "../schema/config.schema.json",
  "http": {
    "params": {
      "port": 3000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["originalUrl"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "ws": {
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["payload"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "osc": {
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["address"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "midi": {
    "params": {
      "virtualInputName": "oscee Input",
      "virtualOutputName": "oscee Output"
    },
    "triggers": [
      {
        "type": "midi-note-on",
        "params": {
          "port": "virtual"
        },
        "actions": [
          {
            "type": "log",
            "transforms": [],
            "enabled": true
          },
          {
            "type": "peer-output",
            "params": {
              "room": "test-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "tcp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["string"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "osc-output",
            "params": {
              "host": "127.0.0.1",
              "port": 8001,
              "protocol": "udp",
              "address": "/test",
              "_args": ["${msg.string}"]
            },
            "enabled": true
          },
          {
            "type": "delay",
            "params": {
              "duration": 1000,
              "actions": [{ "type": "log", "enabled": true }]
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "udp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["string"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "forward",
            "params": {
              "host": "127.0.0.1",
              "port": 8000,
              "protocol": "tcp"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "mqtt": {
    "params": {
      "broker": "",
      "topics": ["#"]
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["topic"]
        },
        "actions": [{ "type": "log", "enabled": true }],
        "enabled": true
      }
    ]
  },
  "peer": {
    "params": {
      "url": "http://localhost:8888",
      "room": "test"
    },
    "triggers": []
  }
}
