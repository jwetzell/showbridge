{
  "$schema": "../schema/config.schema.json",
  "http": {
    "params": {
      "port": 3000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["originalUrl"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "ws": {
    "triggers": []
  },
  "osc": {
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": ["^/test/.*$"],
          "properties": ["address"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "http",
            "params": {
              "url": "http://localhost:3000/test",
              "method": "GET"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "midi": {
    "triggers": []
  },
  "tcp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "sender",
        "params": {
          "address": "127.0.0.1"
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "osc-output",
            "params": {
              "host": "localhost",
              "_address": "/test/${msg}",
              "_args": [1, "${msg}"],
              "protocol": "udp",
              "port": 8000
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "udp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "sender",
        "params": {
          "address": "10.0.0.94"
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "forward",
            "params": {
              "host": "127.0.0.1",
              "port": 8000,
              "protocol": "tcp"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "mqtt": {
    "params": {
      "broker": "",
      "topics": ["test/#"]
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": ["^.*$"],
          "properties": ["topic"]
        },
        "actions": [{ "type": "log", "enabled": true }],
        "enabled": true
      }
    ]
  }
}
