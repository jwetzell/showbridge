{
  "$schema": "../schema/config.schema.json",
  "http": {
    "params": {
      "port": 3000
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["originalUrl"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "ws": {
    "triggers": []
  },
  "osc": {
    "triggers": [
      {
        "type": "osc-address",
        "params": {
          "address": "/midi/{note_on,note_off}"
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "midi": {
    "triggers": [
      {
        "type": "midi-note-on",
        "params": {
          "port": "virtual"
        },
        "actions": [
          { "type": "log", "enabled": true },
          {
            "type": "midi-output",
            "params": {
              "status": "note_on",
              "note": 1,
              "channel": 1,
              "velocity": 127
            },
            "transforms": [
              {
                "type": "template",
                "params": {
                  "property": "note",
                  "template": "${msg.note}"
                },
                "enabled": true
              }
            ],
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "tcp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "sender",
        "params": {
          "address": "127.0.0.1"
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "osc-output",
            "params": {
              "host": "localhost",
              "_address": "/test/${msg}",
              "_args": [1, "${msg}"],
              "protocol": "udp",
              "port": 8000
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "udp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8000
    },
    "triggers": [
      {
        "type": "sender",
        "params": {
          "address": "127.0.0.1"
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "forward",
            "params": {
              "host": "127.0.0.1",
              "port": 8001,
              "protocol": "tcp"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "mqtt": {
    "params": {
      "broker": "",
      "topics": ["test/#"]
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": ["^.*$"],
          "properties": ["topic"]
        },
        "actions": [{ "type": "log", "enabled": true }],
        "enabled": true
      }
    ]
  }
}
