{
  "$schema": "../../schema/config.schema.json",
  "http": {
    "params": {
      "port": 3001
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["originalUrl"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "rooms": ["example-room", "example-room2"]
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "ws": {
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["payload"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "osc": {
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["address"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "midi": {
    "params": {
      "virtualInputName": "oscee Input2",
      "virtualOutputName": "oscee Output2"
    },
    "triggers": [
      {
        "type": "midi-note-on",
        "params": {
          "port": "virtual"
        },
        "actions": [
          {
            "type": "log",
            "transforms": [],
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "tcp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8001
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["string"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "udp": {
    "params": {
      "address": "0.0.0.0",
      "port": 8001
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["string"]
        },
        "actions": [
          {
            "type": "log",
            "enabled": true
          },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "mqtt": {
    "params": {
      "broker": "mqtt://localhost:1883",
      "topics": ["test"]
    },
    "triggers": [
      {
        "type": "regex",
        "params": {
          "patterns": [".*"],
          "properties": ["topic"]
        },
        "actions": [
          { "type": "log", "enabled": true },
          {
            "type": "bridge-output",
            "params": {
              "room": "example-room"
            },
            "enabled": true
          }
        ],
        "enabled": true
      }
    ]
  },
  "bridge": {
    "params": {
      "url": "http://localhost:8888",
      "room": "test"
    }
  }
}
