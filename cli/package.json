{
  "name": "@showbridge/cli",
  "version": "0.6.10",
  "description": "Simple Protocol Router /s",
  "main": "main.js",
  "type": "module",
  "bin": {
    "showbridge": "main.js"
  },
  "files": [
    "sample/*/default.json",
    "schema"
  ],
  "scripts": {
    "predev": "node ../scripts/setup_dev.js cli",
    "dev": "nodemon --exec 'node --inspect main.js -l debug -c sample/config/dev.json -v sample/vars/dev.json --webui ../webui/dist/webui/browser | pino-pretty'",
    "build": "rimraf sample schema && cp -R ../sample ./ && cp -R ../schema ./",
    "build:dev": "node setup_dev.js",
    "start": "node main.js | pino-pretty",
    "prepack": "npm run build"
  },
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwetzell/showbridge.git"
  },
  "keywords": [
    "show",
    "control",
    "protocol",
    "router",
    "theatre"
  ],
  "license": "MIT",
  "dependencies": {
    "@showbridge/lib": "0.16.3",
    "@showbridge/webui": "0.9.2",
    "commander": "12.1.0"
  },
  "devDependencies": {
    "nodemon": "3.1.9",
    "pino-pretty": "13.0.0",
    "rimraf": "6.0.1"
  },
  "nodemonConfig": {
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "dist",
      "sample"
    ]
  }
}
