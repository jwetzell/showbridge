{
  "name": "showbridge",
  "version": "0.0.0",
  "description": "Simple Protocol Router /s",
  "bin": "main.js",
  "scripts": {
    "pretty": "prettier --write lib/*",
    "test:lib": "node tests/test.js",
    "prebuild": "rimraf dist/bin",
    "bundle:dev": "ncc build main.js -o dist/bundle --target es2020 && cp -r lib/node_modules/@julusian/midi/prebuilds dist/bundle",
    "build": "pkg .",
    "dev": "nodemon --exec 'node main.js -d -c config/dev.json -h webui'",
    "start": "node main.js"
  },
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com"
  },
  "repository": "https://github.com/jwetzell/showbridge",
  "keywords": [
    "show",
    "control",
    "protocol",
    "router",
    "theatre"
  ],
  "license": "GPL-3.0-only",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "esbuild": "^0.18.20",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.10.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.2"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist/bin",
    "assets": [
      "node_modules/thread-stream"
    ]
  }
}
