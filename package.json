{
  "name": "showbridge",
  "version": "0.2.9",
  "description": "Simple Protocol Router /s",
  "bin": "main.js",
  "files":[
    "dist/webui",
    "config",
    "schema"
  ],
  "scripts": {
    "pretty": "prettier --write lib/*",
    "test:lib": "node tests/test.js",
    "predev": "node scripts/setup_dev.js && cd webui && npm run build",
    "dev": "nodemon --ignore dist --ignore webui --ignore launcher --exec 'node main.js -d -c config/dev.json --webui dist/webui'",
    "start": "node main.js",
    "install:all": "node scripts/clean_install.js",
    "prepack": "cd webui && npm install && npm run build"
  },
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com"
  },
  "repository": "https://github.com/jwetzell/showbridge",
  "keywords": [
    "show",
    "control",
    "protocol",
    "router",
    "theatre"
  ],
  "license": "GPL-3.0-only",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.1",
    "showbridge-lib": "0.2.6"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  }
}
