{
  "name": "showbridge",
  "version": "0.0.0",
  "description": "Simple Protocol Router /s",
  "bin": "main.js",
  "scripts": {
    "pretty": "prettier --write lib/*",
    "dev": "nodemon --exec 'node main.js -d -c config/dev.json -h webui'",
    "test": "node tests/test.js",
    "prepackage": "rimraf dist/bin",
    "package": "pkg .",
    "electron": "cd launcher && npm run start"
  },
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com"
  },
  "repository": "https://github.com/jwetzell/showbridge",
  "keywords": [
    "show",
    "control",
    "protocol",
    "router",
    "theatre"
  ],
  "license": "GPL-3.0-only",
  "dependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "@julusian/midi": "^3.0.1",
    "ajv": "^8.12.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "mqtt": "^4.3.7",
    "osc-min": "^1.1.2",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "respawn": "^2.6.0",
    "slip": "^1.0.2",
    "socket.io-client": "^4.7.1",
    "superagent": "^8.0.9",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "electron": "^25.3.0",
    "esbuild": "^0.18.15",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist/bin",
    "assets": [
      "node_modules/thread-stream"
    ]
  }
}
