{
  "name": "showbridge",
  "version": "0.3.4",
  "description": "Simple Protocol Router /s",
  "bin": "main.js",
  "files": [
    "webui/dist/webui",
    "examples/config/default.json",
    "schema"
  ],
  "scripts": {
    "test:lib": "node tests/test.js",
    "predev": "node scripts/setup_dev.js && cd webui && npm run build",
    "dev": "nodemon --ignore dist --ignore webui --ignore launcher --exec 'node --inspect main.js -d -c examples/config/dev.json --webui webui/dist/webui'",
    "start": "node main.js",
    "install:all": "node scripts/install_all.js",
    "prepack": "cd webui && npm install && npm run build"
  },
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com"
  },
  "repository": "https://github.com/jwetzell/showbridge",
  "keywords": [
    "show",
    "control",
    "protocol",
    "router",
    "theatre"
  ],
  "license": "GPL-3.0-only",
  "dependencies": {
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "showbridge-lib": "0.3.1"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  }
}
