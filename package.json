  "license": "GPL-3.0-only",
  "dependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "@julusian/midi": "^3.0.1",
    "ajv": "^8.12.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "mqtt": "^4.3.7",
    "osc-min": "^1.1.2",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "respawn": "^2.6.0",
