    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.10.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
