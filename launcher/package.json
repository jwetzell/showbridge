{
  "name": "@showbridge/launcher",
  "description": "Desktop app to launch and configure showbridge",
  "version": "0.4.0",
  "main": "src/main.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwetzell/showbridge.git"
  },
  "type": "commonjs",
  "scripts": {
    "tailwind": "tailwindcss build -i tailwind.css -o src/assets/css/tailwind.css",
    "prestart": "npm run tailwind",
    "start": "electron .",
    "predev": "node ../scripts/setup_dev.js",
    "dev": "npm run start",
    "build": "electron-builder",
    "build:linux": "electron-builder -l",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder -w",
    "build:all": "electron-builder -mwl",
    "release": "electron-builder"
  },
  "dependencies": {
    "file-stream-rotator": "^1.0.0",
    "fs-extra": "^11.2.0",
    "respawn": "^2.6.0",
    "@showbridge/cli": "0.4.15",
    "tail": "^2.2.6",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@vercel/ncc": "^0.38.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "node-gyp": "^10.0.1",
    "tailwindcss": "^3.3.6"
  },
  "build": {
    "productName": "showbridge",
    "appId": "showbridge.jwetzell.com",
    "artifactName": "showbridge.${os}-${arch}.v${version}.${ext}",
    "icon": "./src/assets/images/icon512x512.png",
    "beforePack": "./electron_bundle.js",
    "directories": {
      "output": "./dist/electron-output/"
    },
    "electronLanguages": [
      "en-US"
    ],
    "mac": {
      "category": "Utilities",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      },
      "hardenedRuntime": true,
      "notarize": {
        "teamId": "JHA7H7P56J"
      },
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "NSIS",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "extraResources": {
      "from": "./dist/showbridge",
      "to": "./dist/showbridge"
    }
  }
}
