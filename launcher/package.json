{
  "name": "@showbridge/launcher",
  "description": "Desktop app to launch and configure showbridge",
  "version": "0.7.1",
  "main": "src/main.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwetzell/showbridge.git"
  },
  "type": "commonjs",
  "scripts": {
    "tailwind": "tailwindcss -i tailwind.css -o src/assets/css/tailwind.css",
    "prestart": "npm run tailwind",
    "start": "electron .",
    "predev": "node ../scripts/setup_dev.js launcher",
    "dev": "npm run start",
    "build": "electron-builder",
    "build:linux": "electron-builder -l",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder -w",
    "build:all": "electron-builder -mwl",
    "release": "electron-builder"
  },
  "dependencies": {
    "@showbridge/cli": "0.7.3",
    "file-stream-rotator": "1.0.0",
    "fs-extra": "11.3.2",
    "respawn": "2.6.0",
    "tail": "2.2.6",
    "xterm": "5.3.0",
    "xterm-addon-fit": "0.8.0"
  },
  "devDependencies": {
    "@electron/notarize": "3.1.0",
    "@tailwindcss/cli": "^4.1.14",
    "electron": "39.1.1",
    "electron-builder": "26.0.12",
    "tailwindcss": "^4.1.17"
  },
  "build": {
    "productName": "showbridge",
    "appId": "showbridge.jwetzell.com",
    "artifactName": "showbridge.${os}-${arch}.v${version}.${ext}",
    "icon": "./src/assets/images/icon512x512.png",
    "beforePack": "./electron_bundle.js",
    "npmRebuild": false,
    "directories": {
      "output": "./dist/electron-output/"
    },
    "electronLanguages": [
      "en-US"
    ],
    "mac": {
      "category": "Utilities",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      },
      "hardenedRuntime": true,
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "NSIS",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    }
  }
}
