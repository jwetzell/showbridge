{
  "name": "showbridge-launcher",
  "description": "Desktop app to launch and configure showbridge",
  "version": "0.2.2",
  "main": "main.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Joel Wetzell",
    "email": "me@jwetzell.com",
    "url": "https://jwetzell.com/"
  },
  "repository": "https://github.com/jwetzell/showbridge",
  "type": "commonjs",
  "scripts": {
    "tailwind": "tailwindcss build -i tailwind.css -o assets/css/tailwind.css",
    "prestart": "npm run tailwind",
    "start": "electron main.js",
    "build:linux": "electron-builder -l",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder -w",
    "release": "electron-builder"
  },
  "dependencies": {
    "file-stream-rotator": "^1.0.0",
    "fs-extra": "^11.1.1",
    "respawn": "^2.6.0",
    "showbridge": "^0.2.5",
    "tail": "^2.2.6"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4",
    "tailwindcss": "^3.3.3"
  },
  "build": {
    "productName": "showbridge",
    "appId": "showbridge.jwetzell.com",
    "artifactName": "${name}.${os}-${arch}.v${version}.${ext}",
    "icon": "./assets/images/icon512x512.png",
    "beforePack": "../scripts/electron_bundle.js",
    "afterPack": "../scripts/cleanup.js",
    "directories": {
      "output": "../dist/electron-output/"
    },
    "electronLanguages": [
      "en-US"
    ],
    "mac": {
      "category": "Utilities",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "NSIS",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "armv7l"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "extraResources": [
      {
        "from": "../dist/bundle",
        "to": "./dist/bundle"
      },
      {
        "from": "../node",
        "to": "./node"
      },
      {
        "from": "../config",
        "to": "./config"
      },
      {
        "from": "../dist/webui",
        "to": "./dist/webui"
      }
    ]
  }
}
